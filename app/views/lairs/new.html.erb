<div class="d-flex justify-content-center mt-5">
  <h1>Create a Lair</h1>
</div>
<%= simple_form_for(@lair) do |f| %>
  <div class="form-group row justify-content-center">
    <div class="col-4">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :image, as: :file %>
      <%= f.submit class: "btn btn-outline-info"%>
    </div>
  </div>
<% end %>
