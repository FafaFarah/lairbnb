<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<% lair.image %>" alt="lair image">
  <div class="card-body">
    <% @lairs.each do |lair| %>
      <h5 class="card-title"><%= lair.name %></h5>
      <h5 class="card-title"><%= lair.price %></h5>
      <p class="card-text"><%= lair.description %></p>
      <a href="#" class="btn btn-primary"><%= link_to "see more", lair_path(lair) %></a>
    <% end %>
  </div>
</div>
