<div class="container">
  <% @lairs.each_slice(3) do |lairs| %>
    <div class="row" id="row-styling">
      <% lairs.each do |lair| %>
        <div class="col-4 p-3" id="special-css">
          <%= link_to lair_path(lair) do %>
            <div class="card" data-search-target="card">
              <%= cl_image_tag lair.image.key, height: 300, width: 400, crop: :fill, class: "card-img-top" if lair.image.attached? %>
              <div class="card-body">
                <h5 class="card-title" id="title" data-search-target="title"><%= lair.name %></h5>
                <h5 class="card-title" id="price"><%= lair.price %>ðŸ”¸</h5>
              </div>
             </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
